// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model User {
  id        BigInt   @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  avatar    String?  @db.VarChar(500)
  role      Role     @default(user)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  comments        Comment[]
  readingProgress ReadingProgress[]

  @@map("users")
}

enum Role {
  user
  admin
}

model Author {
  id   Int    @id @default(autoincrement())
  name String
  slug String @unique

  stories Story[]

  @@map("authors")
}

model Category {
  id   Int    @id @default(autoincrement())
  name String
  slug String @unique

  storyGenres StoryGenre[]

  @@map("categories")
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String
  slug String @unique

  storyTags StoryTag[]

  @@map("tags")
}

model Story {
  id            BigInt   @id @default(autoincrement())
  title         String
  slug          String   @unique
  coverUrl      String?  @map("cover_url") @db.VarChar(500)
  narrator      String?
  description   String?  @db.Text
  status        Status
  totalChapters Int      @default(0) @map("total_chapters")
  views         Int      @default(0)
  ratingAvg     Decimal  @default(0) @map("rating_avg") @db.Decimal(3, 2)
  ratingCount   Int      @default(0) @map("rating_count")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @default(now()) @updatedAt @map("updated_at")

  authorId Int    @map("author_id")
  author   Author @relation(fields: [authorId], references: [id])

  chapters        Chapter[]
  storyGenres     StoryGenre[]
  storyTags       StoryTag[]
  comments        Comment[]
  readingProgress ReadingProgress[]

  @@map("stories")
}

enum Status {
  ongoing
  completed
}

model StoryGenre {
  storyId    BigInt @map("story_id")
  categoryId Int    @map("category_id")

  story    Story    @relation(fields: [storyId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  @@id([storyId, categoryId])
  @@map("story_genres")
}

model StoryTag {
  storyId BigInt @map("story_id")
  tagId   Int    @map("tag_id")

  story Story @relation(fields: [storyId], references: [id])
  tag   Tag   @relation(fields: [tagId], references: [id])

  @@id([storyId, tagId])
  @@map("story_tags")
}

model Chapter {
  id          BigInt   @id @default(autoincrement())
  number      Int
  title       String
  audioUrl    String   @map("audio_url") @db.VarChar(500)
  durationSec Int      @default(0) @map("duration_sec")
  createdAt   DateTime @default(now()) @map("created_at")

  storyId BigInt @map("story_id")
  story   Story  @relation(fields: [storyId], references: [id])

  @@unique([storyId, number])
  @@map("chapters")
}

model ReadingProgress {
  userId        BigInt   @map("user_id")
  storyId       BigInt   @map("story_id")
  chapterNumber Int      @map("chapter_number")
  lastReadAt    DateTime @default(now()) @map("last_read_at")

  user  User  @relation(fields: [userId], references: [id])
  story Story @relation(fields: [storyId], references: [id])

  @@id([userId, storyId])
  @@map("reading_progress")
}

model Comment {
  id        BigInt   @id @default(autoincrement())
  content   String   @db.Text
  createdAt DateTime @default(now()) @map("created_at")

  storyId  BigInt    @map("story_id")
  story    Story     @relation(fields: [storyId], references: [id])
  userId   BigInt    @map("user_id")
  user     User      @relation(fields: [userId], references: [id])
  parentId BigInt?   @map("parent_id")
  parent   Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies  Comment[] @relation("CommentReplies")

  @@map("comments")
}
